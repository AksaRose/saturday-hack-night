// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String      @id @unique @default(cuid())
  authid          String?     @unique // SuperTokens Authentication ID
  githubid        String?     @unique // Github ID
  name            String
  avatar          String?
  email           String      @unique
  campus          String?
  district        String?
  mobile          String?     @unique
  teams           Team[]
}

model Event {
  id            String        @id @unique @default(cuid())
  name          String
  description   String
  image         String
  info          String
  date          DateTime
  teams         Team[]
  projectCount  Int           @default(0)
  registration  Boolean       @default(false)
  results       Boolean       @default(false)
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
}
model Team {
  id            String        @id @unique @default(cuid())
  name          String
  pitchStatus   PitchStatus   @default(PENDING)
  projectStatus ProjectStatus @default(PENDING)
  repo          String
  eventid       String
  event         Event         @relation(fields: [eventid], references: [id])
  members       User[]      
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
}

enum PitchStatus {
  PENDING
  ABSENT
  PRESENT
}

enum ProjectStatus {
  PENDING
  WORKING
  COMPLETED
  DROP
  BESTPROJECT
}